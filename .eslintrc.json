{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": "off",
    "object-curly-newline": ["error", "always"],
    "no-unused-vars": "warn",
    "no-plusplus": "off",
    "max-len": ["error", 180, {"ignoreUrls": true}],
    "quotes": ["error", "single"],
    "prefer-const": "off",
    "indent": ["error", 2, {"SwitchCase": 1}],
    "no-tabs": "off",
    "arrow-body-style": "off",
    "no-alert": "off",
    "prefer-destructuring": "off"
  },
  "noInlineConfig": true
}
